{
  "compilerOptions": {
    "target": "ES5",
    "moduleResolution": "node",
    "outDir": "dist",
    "sourceMap": true,
    "suppressImplicitAnyIndexErrors": true,
    "suppressExcessPropertyErrors": true,
    "strict": false,
    "removeComments": false,
    "lib": ["esnext", "dom", "es2016"],
    "skipLibCheck": true,
    "types": [
      "node"
    ]
  },
  "include": [
    "src/**/*",
    "generated/**/*",
    "index.ts"
  ],
  "exclude": [ "dist", "./node_modules/*" ]
}
